<?xml version="1.0"?>
<ruleset name="mintme">
    <file>.</file>

    <exclude-pattern>/vendor</exclude-pattern>
    <exclude-pattern>/phpstan</exclude-pattern>

    <rule ref="PSR2" />
    <rule ref="PSR1" />
    <rule ref="vendor/escapestudios/symfony2-coding-standard">
        <exclude name="Symfony.Commenting.ClassComment.Missing" />
        <exclude name="Symfony.Commenting.License.Warning" />
        <exclude name="Symfony.Commenting.FunctionComment.MissingParamComment" />
        <exclude name="Symfony.Functions.Arguments.Invalid" />
    </rule>
    <arg name="colors"/>
</ruleset>
